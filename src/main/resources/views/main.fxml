      <children>
        <Label fx:id="labelCount" text="Количество записей:" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" />
      </children>
      <VBox.margin>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </VBox.margin>
    </AnchorPane>
  </children>
